{
  "name": "grand-hotel-backend",
  "version": "1.0.0",
  "description": "Backend API server for Grand Hotel application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required'",
    "seed": "node seed.js",
    "migrate": "node scripts/migrate-data.js",
    "dev:client": "cd ../frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\""
  },
  "keywords": [
    "hotel",
    "api",
    "booking"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}